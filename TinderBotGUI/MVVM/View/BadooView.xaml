<UserControl x:Class="TinderBotGUI.MVVM.View.BadooView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TinderBotGUI.MVVM.View"
             xmlns:data="clr-namespace:TinderBotGUI.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="Badoo" FontSize="30" Grid.ColumnSpan="2" Foreground="White" HorizontalAlignment="Center"/>
        <Button Content="Stop" Command="{Binding Badoo.stopCommand}" Width="100" Height="100" Grid.Column="1" Style="{StaticResource RoundButtonTheme}"/>
        <Button Content="Start" Command="{Binding Badoo.startCommand}" Width="100" Height="100" Style="{StaticResource RoundButtonTheme}"/>
    </Grid>
</UserControl>
